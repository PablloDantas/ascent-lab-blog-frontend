<style>
    /* From Uiverse.io by faizanullah1999 */
    .main-button {
        font-family: 'Roboto Mono', monospace;
        color: var(--c3);
        cursor: pointer;
        font-size: 1.5rem;
        border: 1px solid transparent;
        border-image: linear-gradient(45deg,
        #ff4500,
        #ff5a00,
        #ff7300,
        #ff8c00,
        #ffa500
        ) 1;
        padding: 0.5rem 2rem;
        background-color: transparent;
        transition: transform 0.3s ease;
        transition-property: background-position, border, color;
        position: relative;
        z-index: 1;
    }

    .main-button:hover {
        color: var(--c5);
        border-color: var(--c3);
        border-image: linear-gradient(45deg,
        #ffffff,
        #f0f0f0,
        #d9d9d9,
        #bdbdbd,
        #9e9e9e
        ) 1;
    }

    .main-button:active {
        transform: scale(0.95);
    }

    .main-button span:first-child {
        content: "";
        position: absolute;
        background-color: var(--c5);
        width: 0.3rem;
        height: 0.3rem;
        top: calc(15%);
        transition: background-color 0.15s ease-in-out;
        animation: moveLeftToRight 0.5s ease-in-out forwards;
    }

    .main-button:hover span:first-child {
        background-color: var(--c3);
        animation: moveRightToLeft 0.5s ease-in-out forwards;
    }

    .main-button span:last-child {
        content: "";
        position: absolute;
        background-color: var(--c5);
        width: 0.3rem;
        height: 0.3rem;
        bottom: calc(15%);
        transition: background-color 0.15s ease-in-out;
        animation: moveRightToLeft 0.5s ease-in-out forwards;
    }


    .main-button:hover span:last-child {
        background-color: var(--c3);
        animation: moveLeftToRight 0.5s ease-in-out forwards;
    }

    .main-button:before {
        content: "";
        position: absolute;
        z-index: 2;
        top: 40%;
        left: -2px;
        width: 2px;
        height: 20%;
        background-color: var(--c1);
    }

    .main-button:after {
        content: "";
        position: absolute;
        z-index: 2;
        top: 40%;
        right: -2px;
        width: 2px;
        height: 20%;
        background-color: var(--c1);
    }

    @@keyframes moveRightToLeft {
        from {
            left: calc(10%);
        }
        to {
            left: calc(85%);
        }
    }

    @@keyframes moveLeftToRight {
        from {
            left: calc(90%);
        }
        to {
            left: calc(10%);
        }
    }

</style>

@model MainButton

<button class="main-button">
    <span></span>
    @Model.Text
    <span></span>
</button>