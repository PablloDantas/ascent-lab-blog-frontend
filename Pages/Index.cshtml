@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}


<style>
    .home {
        display: grid;
        grid-template-columns: 1fr 4fr 1fr;
        grid-template-areas: ". grid-content .";
    }

    .home h1 {
        margin-top: 100px;
    }

    .home img {
        margin-top: 50px;
        max-width: 1000px;
    }
    
    .home-content{
        grid-area: grid-content;
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

</style>

<div class="home">
    <div class="home-content">
        <h1 class="display-4">Hehe, Welcome!</h1>
        <img src="~/assets/images/welcome.jpeg" alt="Tank You!!!"/>
    </div>
</div>
